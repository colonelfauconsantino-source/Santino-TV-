/* Style g√©n√©ral */
body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  text-align: center;
}

/* En-t√™te */
header {
  background-color: #111;
  color: white;
  padding: 20px;
}

/* Titre */
h1 {
  color: #00aaff;
  margin-bottom: 15px;
}

/* Boutons */
button {
  background-color: #00aaff;
  color: white;
  border: none;
  padding: 12px 20px;
  font-size: 16px;
  border-radius: 8px;
  cursor: pointer;
  margin: 10px;
}

button:hover {
  background-color: #0088cc;
}

/* Image */
img {
  max-width: 90%;
  border-radius: 10px;
  margin-top: 15px;
}

/* Texte */
strong {
  display: block;
  margin-top: 15px;
  font-size: 18px;
}

/* Vid√©o */
video {
  max-width: 95%;
  margin: 20px auto;
  border-radius: 10px;
}
